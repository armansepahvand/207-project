extends layout

block content
 
  nav.navbar.navbar-expand-md.navbar-light.bg-light.sticky-top
    .container
      a.navbar-brand(href="/")
        img(src="images/logogry.png" alt="logo" title="Logo")
      h2 Sweetpea Travel's
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarResponsive")
        span.navbar-toggler-icon
      #navbarResponsive.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="about") About
          li.nav-item
            a.nav-link(href="contact") Contact
          li.nav-item
            a.nav-link.active(href="register") Register
          if currentUser
            li.nav-item
              a.nav-link(href='logedinuser?id='+ currentUser._id) Profile
  .container
    .gallery
      img.float-right(src="images/fishingcircle.jpg" alt="Gone Fishing")
  .container
    div(style="text-align:center")
      .register
        h2 Register to become a Member
    .container
      form(name="myForm" action="/register" onsubmit="return Validate()" method="POST")
        .form-group
          label(for="CustFirstName") First Name:
          input#CustFirstName.form-control.binput(type="text" placeholder="First Name" name="CustFirstName" required="")
        .form-group
          label(for="CustLastName") Last Name:
          input#CustLastName.form-control.binput(type="text" placeholder="Last Name" name="CustLastName" required="")
          label(for="CustAddress") Street Address:
          input#CustAddress.form-control.binput(type="text" placeholder="Street Address" name="CustAddress")
          label(for="CustCity") City:
          input#CustCity.form-control.binput(type="text" placeholder="City" name="CustCity")
          label(for="CustProv") Province:
          input#CustProv.form-control.binput(type="text" placeholder="Province" name="CustProv")
          label(for="CustPostal") Postal Code:
          input#CustPostal.form-control.binput(type="text" placeholder="Postal Code" name="CustPostal")
          label(for="CustPhone") Phone Number:
          input#CustPhone.form-control.binput(type="text" placeholder="Home Phone" name="CustPhone" required="")
          label(for="CustUsername") User Name:
          input#password.form-control.binput(type="text" placeholder="Username" name="CustUsername" required="")
          label(for="CustPassword") Password:
          input#password.form-control.binput(type="text" placeholder="Password" name="CustPassword" required="")
        //- .form-group
        //-   .form-check-inline
        //-     label.form-check-label
        //-       input.form-check-input(type="radio" name="gender" value="man")
        //-       | Man
        //-   .form-check-inline
        //-     label.form-check-label
        //-       input.form-check-input(type="radio" name="gender" value="woman")
        //-       | Woman
        //-   .form-check-inline
        //-     label.form-check-label
        //-       input.form-check-input(type="radio" name="gender" value="other")
        //-       | Other
        input(type="submit" value="Submit")
        input(type="reset" value="Reset")
  // Footer
  footer
    .col-12
      .font-weight-bold
        h5 Â© Sweetpea Travel's
  link(href="./stylesheets/registerstylesheet.css" link="" rel="stylesheet")
  script(src="js/register.js")